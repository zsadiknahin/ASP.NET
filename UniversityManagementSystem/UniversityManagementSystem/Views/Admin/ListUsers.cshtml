@*<h2>ListUsers</h2>*@

<div class="container">
    <h2>Users Management</h2>

    @if (TempData["SuccessMsg"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMsg"]</div>
    }
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-danger">@TempData["msg"]</div>
    }

    <a href="@Url.Action("CreateUser")" class="btn btn-success mb-3">Create New User</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        @*<a href="@Url.Action("Edit", new { type = "user", id = user.UserId })" class="btn btn-primary btn-sm">Edit</a>*@
                        <a href="@Url.Action("EditUser", "Admin", new { id = user.UserId })" class="btn btn-primary btn-sm">
                            Edit
                        </a>
                        @*<a href="@Url.Action("Delete", new { type = "user", id = user.UserId })" class="btn btn-danger btn-sm">Delete</a>*@
                        @*<a href="@Url.Action("DeleteUser", "Admin", new { id = user.UserId })" class="btn btn-danger btn-sm">
                                Delete
                            </a>*@
                        @*<form method="post" action="@Url.Action("DeleteUser")" style="display:inline;">
                                <input type="hidden" name="id" value="@user.UserId" />
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                            </form>*@
                        @*<form method="post" action="@Url.Action("DeleteUser", "Admin", new { id = user.UserId })" style="display: inline;">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?')";>
                                    Delete
                                </button>
                            </form>*@
                        <a href="@Url.Action("DeleteUser", "Admin", new { id = user.UserId })"
                           class="btn btn-danger btn-sm">
                            Delete
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

