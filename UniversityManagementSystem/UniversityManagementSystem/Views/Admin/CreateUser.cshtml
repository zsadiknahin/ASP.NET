@{
    ViewBag.Title = "Create User";
}


@{
    ViewBag.Title = "Index";
}


<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow" style="width: 80%; max-width: 350px;">
        <div class="card-body">
            <h3 class="text-center mb-4">Create</h3>
            <form method="post">
                <div class="container my-3 p-3 border-1">
                    <div class="mb-3">
                        <label for="Name" class="form-label">Name</label>
                        <!-- Use ViewBag to retain the entered name -->
                        <input type="text" name="Name" id="Name" class="form-control w-100" placeholder="Enter your name" value="@ViewBag.Name" />
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <!-- Use ViewBag to retain the entered email -->
                        <input type="email" name="Email" id="email" class="form-control w-100" placeholder="Enter your email" value="@ViewBag.Email" />
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <!-- Use ViewBag to retain the entered password -->
                        <input type="password" name="Password" id="password" class="form-control w-100" placeholder="Enter your password" value="@ViewBag.Password" />
                    </div>


                    @*<div class="mb-3">
                            <label for="Role">Role</label>
                            <select id="Role" name="Role" value="@ViewBag.Role">
                                <option value="">Select Role</option>
                                <option value="Admin">Admin</option>
                                <option value="Student">Student</option>
                                <option value="Instructor">Instructor</option>
                            </select>
                        </div>*@

                    <div class="mb-3">
                        <label for="Role" class="form-label">Role</label>
                        <select id="Role" name="Role" class="form-control" required value="@ViewBag.Role">
                            <option value="">Select Role</option>
                            <option value="Admin">Admin</option>
                            <option value="Student">Student</option>
                            <option value="Instructor">Instructor</option>
                        </select>
                    </div>


                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary" style="width: 40%;">Create</button>
                    </div>

                    @if (TempData["msg"] != null)
                    {
                        <div class="alert alert-danger text-center mt-3">
                            @TempData["msg"]
                        </div>
                    }
                    <div class="text-center mt-3">
                        <a href="/Admin/ListUsers" class="text-decoration-none">Back?</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

