<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow" style="width: 80%; max-width: 350px;">
        <div class="card-body">
            <h3 class="text-center mb-4">Delete Course</h3>
            <div class="alert alert-warning">
                <h5>Are you sure you want to delete this Course?</h5>
                <p>This action will delete:</p>
                <ul>
                    <li>Related enrollments</li>
                    <li>Assigned courses</li>
                    <li>Student progress records</li>
                </ul>
            </div>

            <div class="mb-3">
                <strong>Name:</strong>
                <p class="form-control-static">@Model.Name</p>
            </div>

            <div class="mb-3">
                <strong>Course ID:</strong>
                <p class="form-control-static">@Model.CourseId</p>
            </div>

            <div class="mb-3">
                <strong>Instructor Id:</strong>
                <p class="form-control-static">@Model.InstructorId</p>
            </div>

            <form method="post" action="@Url.Action("ConfirmDeleteCourse", "Admin", new { id = Model.CourseId })">
                <div class="d-flex justify-content-center gap-2">
                    <button type="submit" class="btn btn-danger" style="width: 40%;">Delete</button>
                    <a href="@Url.Action("ListCourse", "Admin")" class="btn btn-secondary" style="width: 40%;">Cancel</a>
                </div>
            </form>

            @if (TempData["msg"] != null)
            {
                <div class="alert alert-danger text-center mt-3">
                    @TempData["msg"]
                </div>
            }

            @if (TempData["SuccessMsg"] != null)
            {
                <div class="alert alert-success text-center mt-3">
                    @TempData["SuccessMsg"]
                </div>
            }
        </div>
    </div>
</div>

