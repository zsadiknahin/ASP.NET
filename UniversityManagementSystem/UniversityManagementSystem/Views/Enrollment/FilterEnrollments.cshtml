@{
    ViewBag.Title = "Filter Enrollments";
}

<div class="container mt-4">
    <h2>Filter Enrollments</h2>

    @using (Html.BeginForm("FilterEnrollments", "Enrollment", FormMethod.Get))
    {
        <div class="row mb-3">
            <div class="col-md-4">
                @Html.DropDownList("studentId", (SelectList)ViewBag.Students,
                    "Select Student", new { @class = "form-control", @selected = "selected" })
            </div>
            <div class="col-md-4">
                @Html.DropDownList("courseId", (SelectList)ViewBag.Courses,
                    "Select Course", new { @class = "form-control", @selected = "selected" })
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary">Filter</button>
            </div>
        </div>
    }

    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Student</th>
                    <th>Course</th>
                    <th>Instructor</th>
                    <th>Progress</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var enrollment in Model)
                {
                    <tr>
                        <td>@enrollment.StudentName</td>
                        <td>@enrollment.CourseName</td>
                        <td>@enrollment.InstructorName</td>
                        <td>@(enrollment.Progress ?? "N/A")%</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No enrollments found for the selected filters.</div>
    }
</div>