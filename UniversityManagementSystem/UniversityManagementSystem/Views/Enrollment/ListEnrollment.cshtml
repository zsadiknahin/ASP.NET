
@{
    ViewBag.Title = "ListEnrollment";
}

<!DOCTYPE html>
<html>
<head>
    <title>Enrollment List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Admin Panel</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Dashboard", "Admin")">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ListUsers", "Admin")">Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ListCourses", "Admin")">Courses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Logout", "Login")">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <h2>Enrollment List</h2>

        @if (TempData["SuccessMsg"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMsg"]</div>
        }
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-danger">@TempData["msg"]</div>
        }

        <div class="row my-3">
            <div class="col-md-4">
                <a href="/Enrollment/FilterEnrollments" class="btn btn-outline-info">Filter Enrollment</a>
            </div>
            <div class="col-md-4">
                <a href="/Enrollment/StudentProgressReport" class="btn btn-outline-dark">Student Progress</a>
            </div>
        </div>
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Enrollment ID</th>
                    <th>Student Name</th>
                    <th>Student Email</th>
                    <th>Course Name</th>
                    <th>Course Duration</th>
                    <th>Instructor Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var enrollment in Model)
                    {
                        <tr>
                            <td>@enrollment.EnrollmentId</td>
                            <td>@enrollment.StudentName</td>
                            <td>@enrollment.StudentEmail</td>
                            <td>@enrollment.CourseName</td>
                            <td>@enrollment.CourseDuration</td>
                            <td>@enrollment.InstructorName</td>
                            <td>
                                @*<a href="@Url.Action("DeleteEnrollment", new { id = enrollment.EnrollmentId })"
                                       class="btn btn-sm btn-danger"
                                       onclick="return confirm('Are you sure you want to delete this enrollment?');">
                                        Delete
                                    </a>*@
                                @*<a href="EnrDeleteEnrollment", new { id = enrollment.EnrollmentId }) class="btn btn-danger">Delete</a>*@
                                <a href="@Url.Action("DeleteEnrollment", new { id = enrollment.EnrollmentId })" class="btn btn-danger">Delete</a>

                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">No enrollments found.</td>
                    </tr>
                }
            </tbody>
        </table>

        @*<a href="@Url.Action("Create")" class="btn btn-success">Add New Enrollment</a>*@
        @*<a href="@Url.Action("Create")" class="btn btn-success">Add New Enrollment</a>*@


    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>